<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".XiangqingFeishitiActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#bc1b21" >

        <TextView
            android:id="@+id/tv_xiangmuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="社区项目"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_backxiangmufeishiti"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui_bai" />

        <ImageView
            android:id="@+id/iv_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_fenxiang" />
    </RelativeLayout>

    <com.example.tianshijie1.scv.ObservableScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="47dp"
        android:fillViewport="true"
        android:scrollbars="none" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_xiangmu2"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="11dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rl_mingxing2"
                        android:layout_width="328dp"
                        android:layout_height="155dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/zhanwei_background" >

                        <ImageView
                            android:id="@+id/iv_banner2"
                            android:layout_width="328dp"
                            android:layout_height="155dp"
                            android:background="@drawable/zhanwei_background" />

                        <ImageView
                            android:id="@+id/iv_rongzizhuangtai2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/yure" />

                        <RelativeLayout
                            android:id="@+id/rl_collect2"
                            android:layout_width="54dp"
                            android:layout_height="29dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/shape2" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/iv_collect2"
                                    android:layout_width="17dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/xin_wxz_bai" />

                                <TextView
                                    android:id="@+id/tv_collectnum2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:text="15"
                                    android:textColor="#ffffff"
                                    android:textSize="17sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="#44000000" >

                            <TextView
                                android:id="@+id/tv_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="18dp"
                                android:text="卡丁车俱乐部"
                                android:textColor="#ffffff"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="18dp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/tv_location2"
                                android:background="@drawable/dingwei" />

                            <TextView
                                android:id="@+id/tv_location2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="14dp"
                                android:text="北京"
                                android:textColor="#ffffff"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:orientation="vertical" >

                        <com.example.tianshijie1.util.Jindu
                            android:id="@+id/jindufei"
                            android:layout_width="328dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="109dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_mubiao2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="目标：150万"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/tv_yichou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已筹：150万"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="109dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_fenshu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="总份数：30"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/tv_qitou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="起投金额：1万"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="109dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_ranggu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="让股：120%"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/tv_sytime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="剩余：30天"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="18dp" />

                <TextView
                    android:id="@+id/tv_webup"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" >
                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_can"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_xmjieshao"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="项目介绍"
                        android:textColor="#cf0606"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_xmjieshao_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cf0606" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_hxjingzhengli"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="核心竞争力"
                        android:textColor="#666666"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_hxjingzhengli_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_tdjieshao"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="团队介绍"
                        android:textColor="#666666"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_tdjieshao_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_xiangmudongtai"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:gravity="center"
                        android:text="项目动态"
                        android:textColor="#424242"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_xiangmudongtai_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </com.example.tianshijie1.scv.ObservableScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评论"
            android:textColor="#cf0606"
            android:textSize="14dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:background="#d1d1d1" />

        <TextView
            android:id="@+id/tv_rengou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="认购"
            android:textColor="#cf0606"
            android:textSize="14dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:background="#d1d1d1" />

        <TextView
            android:id="@+id/tv_yuetan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="约谈"
            android:textColor="#cf0606"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>